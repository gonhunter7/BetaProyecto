---
interface Props {
    img:string;
    title:string;
    rating:string;
    precio:string;
}
const {img, title, rating, precio} = Astro.props;
---
<div class="mx-auto max-w-xs bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
  <img class="w-full h-64 object-cover" src={img} alt="Imagen del producto" />

  <div class="p-6 flex flex-col gap-2">
    <h5 class="text-2xl font-semibold text-gray-900">{title}</h5>

    <div class="flex items-center">
      <span class="ml-3 text-sm bg-blue-100 text-blue-800 font-semibold px-2 py-0.5 rounded">{rating}</span>
    </div>

    <p class="text-3xl font-bold text-gray-900">{precio}</p>

    <button class="w-full bg-blue-600 text-white font-medium py-2.5 px-4 rounded-lg hover:bg-blue-700 transition">
      AÃ±adir al carrito
    </button>
  </div>
</div>
